{
  "name": "bitmovin-javascript",
  "version": "0.1.0",
  "scripts": {
    "mocha": "./node_modules/mocha/bin/mocha --compilers js:babel-register --require babel-polyfill --recursive tests --timeout 30000",
    "lint": "./node_modules/eslint/bin/eslint.js --color ./bitmovin",
    "analyze-coverage": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- --compilers js:babel-register --require babel-polyfill --timeout 8500 --colors --reporter dot --recursive tests",
    "check-coverage": "./node_modules/.bin/istanbul check-coverage",
    "coverage": "rm -rf ./coverage && npm run analyze-coverage && npm run check-coverage",
    "test": "npm run lint && npm run coverage",
    "debug": "./node_modules/webpack/bin/webpack.js --config=webpack.config.debug.js",
    "release": "./node_modules/webpack/bin/webpack.js --config=webpack.config.release.js",
    "publish-release": "cd ./build/release && npm publish"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.13.1",
    "isparta": "^4.0.0",
    "istanbul": "v1.1.0-alpha.1",
    "jasmine": "^2.5.2",
    "jasmine-es6": "^0.4.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "nodelint": "^0.6.2",
    "url-join": "^1.1.0",
    "webpack": "^1.14.0",
    "write-json-webpack-plugin": "^1.0.0",
    "xmlhttprequest": "^1.8.0"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "node-fetch": "^1.6.3"
  }
}
